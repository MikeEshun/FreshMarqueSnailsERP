@model FreshMarqueSnailsERP.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">New Order</h2>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*<div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
        </div>*@
    <div class="row">
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="Contact" class="control-label"></label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="w-100 d-none d-md-block"></div>

        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="LargeSize" class="control-label"></label>
                <input asp-for="LargeSize" class="form-control" />
                <span asp-validation-for="LargeSize" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="LargeSizeQuantity" class="control-label"></label>
                <input asp-for="LargeSizeQuantity" class="form-control" />
                <span asp-validation-for="LargeSizeQuantity" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="MediumSize" class="control-label"></label>
                <input asp-for="MediumSize" class="form-control" />
                <span asp-validation-for="MediumSize" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="MediumSizeQuantity" class="control-label"></label>
                <input asp-for="MediumSizeQuantity" class="form-control" />
                <span asp-validation-for="MediumSizeQuantity" class="text-danger"></span>
            </div>
        </div>

        <div class="w-100 d-none d-md-block"></div>

        <div class="col-2 col-sm-3">
            <div class="form-group">
                <label asp-for="JumboSize" class="control-label"></label>
                <input asp-for="JumboSize" class="form-control" />
                <span asp-validation-for="JumboSize" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2 col-sm-3">
            <div class="form-group">
                <label asp-for="JumboSizeQuantity" class="control-label"></label>
                <input asp-for="JumboSizeQuantity" class="form-control" />
                <span asp-validation-for="JumboSizeQuantity" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2 col-sm-3">
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2 col-sm-3">
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
        </div>


        <div class="w-100 d-none d-md-block"></div>

        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="DeliveryStatus" class="control-label"></label>
                <input asp-for="DeliveryStatus" class="form-control" />
                <span asp-validation-for="DeliveryStatus" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="form-group">
                <label asp-for="PaymentMethod"></label>
                @*<input asp-for="PaymentMethod" class="form-control" />*@
                <select class="form-control">
                    <option selected>Open this select menu</option>
                    <option value="1">Cash</option>
                    <option value="2">Mobile Money</option>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
        </div>
        @*<select class="custom-select custom-select-lg mb-3">
            <option selected>Open this select menu</option>
            <option value="1">Cash</option>
            <option value="2">Mobile Money</option>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </select>*@

        <div class="w-100 d-none d-md-block"></div>

        <div class="col-3 col-sm-3"></div>

        <div class="col-3 col-sm-3">
            <div class="form-group d-sm-flex justify-content-center mt-5">
                <input type="submit" value="Create Order" class="btn bg-dark text-white" />
            </div>
        </div>
        <div class="col-3 col-sm-3 d-sm-flex justify-content-center">
            <div class="mt-5">
                <a asp-action="Index" class="btn bg-dark text-white btn-block">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
